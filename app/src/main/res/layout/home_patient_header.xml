<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="@string/title_calendar_appointment"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            app:mcv_calendarMode="month"
            app:mcv_dateTextAppearance="@style/CustomTextAppearance"
            app:mcv_leftArrow="@drawable/ic_round_keyboard_arrow_left_24"
            app:mcv_rightArrow="@drawable/ic_round_keyboard_arrow_right_24"
            app:mcv_selectionColor="?attr/colorSecondary"
            app:mcv_selectionMode="single"
            app:mcv_showOtherDates="none"
            app:mcv_weekDayTextAppearance="?attr/textAppearanceLabelSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:text="@string/title_next_appointments"
            android:textAppearance="?attr/textAppearanceTitleMedium" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>